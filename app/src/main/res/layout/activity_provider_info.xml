<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".provider_info">


    <RelativeLayout
        android:id="@+id/container_info"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/provider_bg"
        android:elevation="15dp"
        android:padding="10dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/picprofile"
            tools:srcCompat="@tools:sample/avatars[0]" />


        <TextView
            android:id="@+id/service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/photo"
            android:fontFamily="sans-serif-black"
            android:text="Full name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/service"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/photo"
            android:fontFamily="monospace"
            android:text="Address"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/Credentials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Status"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/photo"
            android:fontFamily="monospace"
            android:text="credentials"
            android:textSize="10sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Credentials"
            android:layout_toRightOf="@+id/photo"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:isIndicator="true"
            android:maxHeight="45dip"
            android:minHeight="45dip"
            android:progressTint="#DA9837"
            android:scaleX=".5"
            android:scaleY=".5"
            android:transformPivotX="30dp"
            android:transformPivotY="15dp" />


        <TextView
            android:id="@+id/feedback_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingBar"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/photo"
            android:fontFamily="sans-serif-medium"
            android:text="Service Notes:"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/feedback_comment"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/photo"
            android:background="#F5F2F2"
            android:capitalize="sentences"
            android:cursorVisible="false"
            android:fontFamily="serif-monospace"
            android:inputType="textCapSentences"
            android:maxLines="3"
            android:padding="5dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/hire"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@id/photo"
            android:layout_marginTop="20dp"
            android:background="@drawable/button2"
            android:text="HIRE"
            android:textColor="#F8F7F7" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/container_info">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".provider_info"></fragment>

    </RelativeLayout>


</RelativeLayout>