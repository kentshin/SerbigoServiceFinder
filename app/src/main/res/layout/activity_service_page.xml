<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".service_page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:background="@drawable/gradient_header"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:id="@+id/first_layout"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/logo_service"
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
          />

        <TextView
            android:id="@+id/service_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_service"
            android:layout_centerInParent="true"
            android:layout_marginBottom="557dp"
            android:fontFamily="@font/baloo_da"
            android:text="SERVICE NAME"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/second_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/first_layout">

        <EditText
            android:id="@+id/pax"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/limitation"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="5dp"
            android:layout_toLeftOf="@id/compute"
            android:background="@drawable/style_border"
            android:fontFamily="sans-serif-black"
            android:text="1"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/compute"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_below="@id/limitation"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/button3"
            android:backgroundTint="#00c3ff"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Pax"
            android:textAllCaps="false"
            android:textColor="#FCFCFC"
            android:textSize="12sp"
            android:visibility="invisible" />




        <TextView
            android:id="@+id/description"
            android:layout_width="350dp"
            android:layout_height="61dp"
            android:layout_below="@id/sd"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/limitation"
            android:layout_width="350dp"
            android:layout_height="59dp"
            android:layout_below="@id/sl"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/sd"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-black"
            android:text="SERVICE DESCRIPTION"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/sl"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-black"
            android:text="SERVICE LIMITATION"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/limitation"
            android:layout_alignParentTop="false"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-black"
            android:text="FEE: "
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/total_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/limitation"
            android:layout_alignParentTop="false"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/fee"
            android:fontFamily="sans-serif-black"
            android:text="TOTAL"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <Button
            android:id="@+id/request"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/limitation"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:background="@drawable/button2"
            android:backgroundTint="#00C3FF"
            android:fontFamily="@font/baloo_da"
            android:padding="8dp"
            android:text="Request Service Provider"
            android:textColor="#FAF8F8" />

    </RelativeLayout>

</RelativeLayout>